<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Page Watcher</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-expand-lg navbar-light">
        <div class="container">
            @Html.ActionLink("Page Watcher", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Logger", "Index", "Logger", null, new { @class = "nav-link" })</li>
                </ul>
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                <ul class="navbar-nav">
                    <li class="nav-item"><div class="navbar-text">Hello @User.Identity.Name</div></li>
                    <li class="nav-item">
                        <a class="btn btn-sm btn-outline-info" href="@Url.Action("LogOut", "Auth")" role="button">Log Out</a>
                    </li>
                </ul>
            }
        </div>
    </div>
    <div class="body-content">
        @RenderBody()
        <footer class="fixed-bottom">
            <hr />
            <div class="container">
                <p>&copy; @DateTime.Now.Year - <a href="https://github.com/hostile-d/PageWatcher.Net">hostile-d</a>.</p>
                <p>You can adopt this app for your case.</p>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
